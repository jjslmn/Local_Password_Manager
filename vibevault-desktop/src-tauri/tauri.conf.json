{
    "productName": "VibeVault",
    "version": "1.0.4",
    "identifier": "com.vibevault.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "VibeVault",
                "width": 800,
                "height": 600,
                "resizable": true,
                "center": true
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
        }
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "appimage", "msi", "nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico",
            "icons/icon.png"
        ],
        "shortDescription": "Secure offline password manager",
        "longDescription": "VibeVault is a secure, offline-first password manager that stores your credentials locally with strong encryption. Your data never leaves your machine.",
        "category": "Utility",
        "linux": {
            "appimage": {
                "bundleMediaFramework": false
            },
            "deb": {
                "depends": ["libwebkit2gtk-4.1-0", "libayatana-appindicator3-1"]
            }
        },
        "windows": {
            "nsis": {
                "installMode": "currentUser"
            }
        }
    }
}
